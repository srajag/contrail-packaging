#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

DEB_NAME=igb-uio
NAME=igb_uio
VERSION=1.7.1
export SB_TOP := $(shell pwd | sed -re "s/(.*)\/tools\/packaging\/(.*)/\1/")
export buildroot := ${SB_TOP}/build/debian/$(DEB_NAME)-dkms

%:
	dh $@ --tmpdir=${buildroot} --destdir=${SB_TOP}/build/debian

override_dh_auto_install:
	$(MAKE) DESTDIR=${buildroot} NAME=$(NAME) VERSION=$(VERSION) install

